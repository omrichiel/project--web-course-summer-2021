  script.
    console.log(document.getElementById('active_user').innerHTML);
    if (document.getElementById('active_user').innerHTML == 'Hello guest'){
      document.getElementById('sign-in').style.display = 'inline-block';
      document.getElementById('sign-out').style.display = 'none';
    }
    else {
      document.getElementById('sign-in').style.display = 'none';
      document.getElementById('sign-out').style.display = 'inline-block';
    }

  table.profileOptions
    tr
      td
        div(onclick="location.href='http://localhost:3000/update_user'") Edit profile details
      td
        div(onclick="location.href='http://localhost:3000/add_tickets'") Add tickets for sale

  h1#myTickets My Sale Tickets
  ul(class="tickets" id="tickets")
    for saleTicket in forSale
      li(class="filterDiv "+saleTicket.category)
        h2(href="#" class="eventName")= saleTicket.event_name
        p(class="place")= saleTicket.location_name
        p(class="address")= saleTicket.address
        p(class="price")= saleTicket.purchase_price
        .datetime
          p(class="date")= saleTicket.event_date
          p(class="time")= saleTicket.start_time
        br
        br
        a(href='http://localhost:3000/tickets/'+saleTicket.ticket_ID) For more details and buy click here

  h1#myTickets My Sells
  ul(class="tickets" id="tickets")
