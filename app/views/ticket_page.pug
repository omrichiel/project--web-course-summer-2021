  br
  //- end header
  
  script.
    console.log(document.getElementById('active_user').innerHTML);
    if (document.getElementById('active_user').innerHTML == 'Hello guest'){
      document.getElementById('sign-in').style.display = 'inline-block';
      document.getElementById('sign-out').style.display = 'none';
    }
    else {
      document.getElementById('sign-in').style.display = 'none';
      document.getElementById('sign-out').style.display = 'inline-block';
    }

  h2 Ticket Details
  form(class='ticket-container' action='http://localhost:3000/new_deal' method='POST')
    span
      h5#ticketID Ticket ID:
      a= ticketDetails.ticket_ID
      h5#eventName Event name:
      a= ticketDetails.event_name
      h5#category Category:
      a= ticketDetails.category
    br
    span
      h5#startDate Date:
      a(type='date')= ticketDetails.event_date
      h5#startTime Time:
      a(type='time')=ticketDetails.start_time
    br
    span
      h5#place Location:
      a(type='text')
        a=ticketDetails.location_name
        h5#address Address:
        a(type='text')=ticketDetails.address
    br
    span
      h5#row Row:
      a=ticketDetails.row_seat
      h5#chair Chair:
      a=ticketDetails.chair
    br
    span
      h5#purchasePrice Purchase price (per ticket):
      a(type='text')=ticketDetails.purchase_price
      h5#salePrice Sale price (per ticket):
      a(type='text')=ticketDetails.sale_price
      h5#quantity Quantity:
      a(type='number')=ticketDetails.qunatity
    br
    span
      h5#phone
        | Phone number:
        a(type='tel')=ticketDetails.phone
    br
    br
    br
    input(type="int" name="ticket_ID" value= ticketDetails.ticket_ID style="display: none")
    input(type="real" name="sale_price" value= ticketDetails.sale_price style="display: none")
    input(type="text" name="seller" value= ticketDetails.owner style="display: none")
    button(type='submit') Buy Now
    //-button(type='submit') Delete
  br
  br
  br
  //- start footer
  table.footer
    tr
      td
